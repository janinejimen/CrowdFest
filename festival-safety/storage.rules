rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ---------- Profile Pictures ----------
    match /profilePics/{uid}/{allPaths=**} {
      // User can upload/read ONLY their own profile picture
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // ---------- Everything else ----------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
